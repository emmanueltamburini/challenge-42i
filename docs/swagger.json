{
    "openapi": "3.0.0",
    "info": {
      "title": "Challenge API",
      "version": "1.0.0"
    },
    "components": {
      "responses": {
        "BadRequestResponse": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "value": {
                          "type": "array",
                          "items": {
                            "type": "integer"
                          }
                        },
                        "msg": {
                          "type": "string"
                        },
                        "path": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "paths": {
      "/api/challenge/smallest-difference": {
        "post": {
          "summary": "Calculate the smallest difference between two arrays",
          "description": "This endpoint calculates the smallest difference between two arrays provided in the request body.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "firstArray": {
                      "type": "array",
                      "items": { "type": "integer" }
                    },
                    "secondArray": {
                      "type": "array",
                      "items": { "type": "integer" }
                    }
                  },
                  "required": ["firstArray", "secondArray"],
                  "example": {
                    "firstArray": [1, 3, 15, 11, 2],
                    "secondArray": [23, 127, 235, 19, 8]
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Smallest difference successfully calculated",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "response": {
                        "type": "object",
                        "properties": {
                          "difference": {
                            "type": "integer"
                          },
                          "pair": {
                            "type": "array",
                            "items": { "type": "integer" }
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "response": {
                      "difference": 3,
                      "pair": [11, 8]
                    }
                  }
                }
              }
            },
            "400": {
              "$ref": "#/components/responses/BadRequestResponse"
            }
          }
        }
      },
      "/api/challenge/non-constructible-change": {
        "post": {
          "summary": "Calculate the minimum non-constructible change",
          "description": "This endpoint calculates the minimum non-constructible change for a given list of coins provided in the request body.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "coins": {
                      "type": "array",
                      "items": { "type": "integer" }
                    }
                  },
                  "required": ["coins"],
                  "example": {
                    "coins": [5, 7, 1, 1, 2, 3, 22]
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Minimum non-constructible change successfully calculated",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "response": {
                        "type": "integer"
                      }
                    }
                  },
                  "example": {
                    "response": 20
                  }
                }
              }
            },
            "400": {
              "$ref": "#/components/responses/BadRequestResponse"
            }
          }
        }
      }
    }
  }
  